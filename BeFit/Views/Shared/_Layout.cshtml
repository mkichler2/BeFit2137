<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BeFit</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BeFit.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">BeFit</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar"
                        aria-controls="mainNavbar" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div id="mainNavbar" class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <!-- Left side menu -->
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        <!-- Sesje -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Sesjes" asp-action="Index">Sesje</a>
                        </li>

                        <!-- Mixes -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Mixes" asp-action="Index">Ćwiczenia</a>
                        </li>

                        <!-- Typy -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Typies" asp-action="Index">Typy ćwiczeń</a>
                        </li>

                        <!-- Statystyki -->
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Stats" asp-action="Index">Statystyki</a>
                        </li>

                    </ul>

                    <!-- Login/Register/Logout -->
                    <partial name="_LoginPartial" />

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            2025 - BeFit - Maciej Kichler
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
