@model BeFit.Models.DTO.CreateSesjaDto

@{
    ViewData["Title"] = "Nowa sesja treningowa";
}

<h1>Dodaj nową sesję treningową</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Start" class="control-label"></label>
                <input asp-for="Start" type="datetime-local" class="form-control" />
                <span asp-validation-for="Start" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="End" class="control-label"></label>
                <input asp-for="End" type="datetime-local" class="form-control" />
                <span asp-validation-for="End" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Zapisz</button>
            <a asp-action="Index" class="btn btn-secondary">Powrót</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
