@model BeFit.Models.DTO.CreateMixDto

@{
    ViewData["Title"] = "Dodaj ćwiczenie";
}

<h1>Dodaj wykonane ćwiczenie</h1>

<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="TypyId" class="control-label"></label>
                <select asp-for="TypyId" class="form-control" asp-items="(IEnumerable<SelectListItem>)ViewBag.TypyId">
                    <option value="">-- wybierz typ ćwiczenia --</option>
                </select>
                <span asp-validation-for="TypyId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SesjeId" class="control-label"></label>
                <select asp-for="SesjeId" class="form-control" asp-items="(IEnumerable<SelectListItem>)ViewBag.SesjeId">
                    <option value="">-- wybierz sesję --</option>
                </select>
                <span asp-validation-for="SesjeId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Waga" class="control-label"></label>
                <input asp-for="Waga" class="form-control" />
                <span asp-validation-for="Waga" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Serie" class="control-label"></label>
                <input asp-for="Serie" class="form-control" />
                <span asp-validation-for="Serie" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Powtorzenia" class="control-label"></label>
                <input asp-for="Powtorzenia" class="form-control" />
                <span asp-validation-for="Powtorzenia" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Zapisz</button>
            <a asp-action="Index" class="btn btn-secondary">Powrót</a>
        </form>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
